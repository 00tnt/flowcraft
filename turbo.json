{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },

    "//#init-submodules": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["be/*"]
    },

    "//#install-fe": {
      "dependsOn": ["init-submodules"]
    },

    "pages:build": {
      "dependsOn": ["^pages:build"]
    }
  }
}
